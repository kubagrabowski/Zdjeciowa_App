<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddActivity">

    <TextView
            android:text="Dodawanie obrazu"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/add_txt_title" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:text="https://square.github.io/picasso/static/sample.png"
            android:ems="10"
            android:id="@+id/add_url_edit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_url_txt" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="URL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_url_txt" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_txt_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Nazwa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_name_txt" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_url_edit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/add_name_edit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_name_txt" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_date_txt" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_name_edit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="216dp"
            android:layout_height="38dp"
            android:onClick="wprowadzDate"
            android:ems="10"
            android:id="@+id/add_date_edit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_date_txt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Tagi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_tags_txt" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_date_edit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/add_tags_edit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_tags_txt" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Dodaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_button" android:layout_marginTop="368dp"
            app:layout_constraintTop_toBottomOf="@+id/add_txt_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:onClick="dodaj"/>
</android.support.constraint.ConstraintLayout>