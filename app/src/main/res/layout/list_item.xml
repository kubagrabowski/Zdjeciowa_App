<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_listitem"
        >


    <ImageView
            android:id="@+id/image_listitem"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:scaleType="centerCrop"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imagename_listitem" android:layout_marginTop="27dp"
            android:layout_below="@+id/image_listitem" android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/date_listitem"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/image_listitem" android:layout_toEndOf="@+id/imagename_listitem"
            android:layout_marginStart="154dp" android:layout_alignParentEnd="true" android:layout_marginEnd="111dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tags_listitem" android:layout_marginTop="43dp"
            android:layout_below="@+id/imagename_listitem" android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"/>

</RelativeLayout>